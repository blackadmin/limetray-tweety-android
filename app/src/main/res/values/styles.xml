<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <!-- Remove actionbar shadow -->
        <!-- <item name="android:windowContentOverlay">@null</item> -->


        <item name="colorPrimary">@color/actionbar_green_dark_primary</item>

        <!-- colorPrimaryDark is used for the status bar (with the
             battery, clock, etc). -->
        <item name="colorPrimaryDark">@color/actionbar_green_dark_status</item>

        <!-- colorAccent is used as the default value for
             colorControlActivated which is used to tint widgets. -->
        <item name="colorAccent">@color/actionbar_green_dark_primary</item>
    </style>

    <!-- Theme without ActionBar shadow (inherits main theme) -->
    <style name="NoShadowActionBarTheme" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
